<div class="container">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<font color="red">*は必須項目です</font>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <% if @user.image? %>
  <%= image_tag @user.image.url, class:"circle-small" %>
<% else %>
  
<% end %>
<div class="field">
  プロフィール画像の変更：<br>
  <%= f.file_field :image %>
</div>
  <!--アカウント編集時に名前を入力できるようにフォームを追加-->
  <div class="field">
    名前 <font color="red">*</font><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->
  <div class="field">
    プロフィール<br />
    <%= f.text_area :profile,size: "35x3", autofocus: true %>
  </div>

  <div class="field">
    プラットフォーム <font color="red">*</font><br />
    <%= f.check_box :steam %> Steam
    <%= f.check_box :ps %> PlayStation
    <%= f.check_box :switch %> Switch
    <%= f.check_box :xbox %> Xbox
  </div>
  <div class="field">
    サバイバーランク<br />
    <%= f.select :survivor_lank, [["灰",0],["銅", 1],["銀", 2],["金", 3],["彩", 4]] ,{}, { class: "form-control" } %>
  </div>

  <div class="field">
    キラーランク<br />
    <%= f.select :killer_lank, [["灰",0],["銅", 1],["銀", 2],["金", 3],["彩", 4]] ,{}, { class: "form-control" } %>
  </div>


  <div class="field">
    プレイスタイル<br />
    <%= f.select :style, [["エンジョイ",0],["ガチ", 1]] ,{}, { class: "form-control" } %>
  </div>

  <div class="field">
    VC <font color="red">*</font><br />
    <%= f.check_box :discord %> Discord
    <%= f.check_box :ptvc %> PTVC
    <%= f.check_box :skype %> Skype
    <%= f.check_box :novc %> 通話なし
  </div>

  <div class="form-group">
    <label>活動時間帯</label>
    <%= f.text_field :activity, class: "form-control" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>
<br>
<br>

<%= link_to '退会する', user_delete_path(current_user), method: :delete,class: "btn btn-danger",data: { confirm: '本当に削除しますか？' } %></li>
</div>